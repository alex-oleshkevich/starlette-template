    "scripts": {
        "tailwind:watch": "npx tailwindcss -i assets/css/main.css -o app/resources/statics/main.css --watch",
        "tailwind:build": "npx tailwindcss --minify -i assets/css/main.css -o app/resources/statics/main.css",
        "esbuild:watch": "node ./build.js --watch",
        "esbuild:build": "node ./build.js --build",
        "build": "npm run tailwind:build && npm run esbuild:build"
    },
    "dependencies": {
        "esbuild": "0.24.0",
        "esbuild-copy-static-files": "0.1.0",
        "flowbite": "^2.5.2",
        "lit": "^3.2.1",
        "notyf": "^3.10.0",
        "tailwindcss": "^3.4.14",
        "typescript": "^5.6.3"
    }
}
